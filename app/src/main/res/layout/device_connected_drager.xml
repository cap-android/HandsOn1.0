<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/device_connected_drager"
              android:layout_width="@dimen/device_connected_drager"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/device_connected_drager"
        android:layout_height="@dimen/device_connected_drager"
        android:alpha="0.5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDeviceFeature"
        android:alpha="0.5"/>
</LinearLayout>